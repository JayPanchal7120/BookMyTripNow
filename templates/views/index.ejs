    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhaina+2&display=swap" rel="stylesheet">

</head>

<body>
    <nav id="navbar">
        <div id="logo">
            <img src="./img/logo.png" alt="BookMyTrip.com">
        </div>
        <ul>
            <li class="item"><a href="#home">Home</a></li>
            <li class="item"><a href="#services-container">Services</a></li>
            <li class="item"><a href="./secret">Secret</a></li>
            <li class="item"><a href="./login">login/Register</a></li>
            <li class="item"><a href="./logout">logout</a></li>
            <right><li class="item"><a href="#">Profile</a></li></right>
            <!-- {{!-- {{#if login}}
            <li class="item"><a href="./logout">login successfull</a></li>
            {{/if}} --}} -->

        </ul>
    </nav>

    <section id="home">
        <h1 class="h-primary">Welcome to Our BookMyTrip Website.</h1>
        <p>This Website used to book Plane ticket, bus, train, cab, Hotel Booking in Adavance.</p>
        <p>This is minimal style website.</p>
        <!-- <button class="btn">Order Now</button> -->
    </section>

    <section id="services-container">
        <h1 class="h-primary center">Our Services</h1>
        <div id="services">
            <div class="box">
                <a href="./flight">
                <img src="./img/flight.png" alt=""></a>
                <h2 class="h-secondary center">Flight Booking</h2>
            </div>
            <div class="box">
                <a href="./train">
                    <img src="./img/train.png" alt="">
                </a>
                <h2 class="h-secondary center"></a>Train <br>Booking</h2>

            </div>
            <div class="box">
                <a href="./bus">
                    <img src="./img/bus.png" alt=""></a>
                <h2 class="h-secondary center">Bus Booking</h2>
            </div>
            <div class="box">
                <a href="./cab">
                    <img src="./img/cab.png" alt="">
                </a>
                <h2 class="h-secondary center">Cab <br>Booking</h2>
            </div>
            <div class="box">
                <a href="./hotel">
                    <img src="./img/hotel.jpg" alt="">
                </a>
                <h2 class="h-secondary center">Hotel Booking</h2>
            </div>
        </div>
    </section>
    <section id="client-section">
        <h1 class="h-primary center">Blogs</h1>
        <div id="clients">
            <div class="client-item">
                <img src="./img/logo1.png" alt="Our Client">
            </div>
            <div class="client-item">
                <img src="./img/logo2.png" alt="Our Client">
            </div>

            <div class="client-item">
                <img src="./img/logo4.png" alt="Our Client">
            </div>
            <div class="client-item">
                <img src="./img/logo3.png" alt="Our Client">
            </div>
        </div>

    </section>

    <section id="contact">
        <h1 class="h-primary center">Contact Us</h1>
        <div id="contact-box">
            <form action="">
                <div class="form-group">
                    <label for="name">Name: </label>
                    <input type="text" name="name" id="name" placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <label for="email">Email: </label>
                    <input type="email" name="name" id="email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number: </label>
                    <input type="phone" name="name" id="phone" placeholder="Enter your phone">
                </div>
                <div class="form-group">
                    <label for="message">Message: </label>
                    <textarea name="message" id="message" cols="30" rows="10"></textarea>
                </div>
            </form>
        </div>
    </section>

    <footer>
        <div class="center">
            Copyright &copy; www.BookMyTrip.com. All rights reserved!
        </div>
    </footer>
</body>

</html>