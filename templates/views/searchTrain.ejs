  <body>
    <%- include('../partials/navbar') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <h1
            class="h-primary text fw-bold"
            style="
              margin-top: 200px;
              font-size: 50px;
              font-family: 'Marck Script', cursive;
              font-family: 'Pacifico', cursive;
            "
          >
            Choose your Train
          </h1>
        </div>
        <div class="col-lg-6">
          <img
            class="img-fluid img.sticky"
            style="margin-top: 70px"
            src="./img/c1.svg"
            alt="O"
          />
        </div>
      </div>
    </div>
    <table
      class="table table-hover table-dark"
      style="
        align-items: center;
        width: 1300px;
        margin: auto;
        margin-top: 30px;
        border: 2px solid black;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.8);
        transform-style: preserve-3d;
        opacity: 0.98;
        margin-bottom: 50px;
      "
    >
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Train No</th>
          <th scope="col">Train Name</th>
          <th scope="col">From</th>
          <th scope="col">To</th>
          <th scope="col">Arrival Time</th>
          <th scope="col">Duration</th>
          <th scope="col">Departure Time</th>
          <th scope="col">Book</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < trains.length; i++) { %>
        <tr>
          <th scope="row"><%= i + 1 %></th>
          <td><%= trains[i].trainNo %></td>
          <td><%= trains[i].trainName %></td>
          <td><%= trains[i].from %></td>
          <td><%= trains[i].to %></td>
          <td><strong> <%= trains[i].arrival %> </strong></td>
          <td><%= trains[i].duration %></td>
          <td><strong> <%= trains[i].departure %> </strong></td>

          <td>
            <a href="/trainbookingForm" style="text-decoration: none; color: white">
              <button
                type="button"
                class="btn btn-secondary"
                id="<%= trains[i]._id%>"
                onclick="booking(this.id)"
              >
                Book Now
              </button>
            </a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <%- include('../partials/footer') %>
  </body>
